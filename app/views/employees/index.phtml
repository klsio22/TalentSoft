      <?php
      $totalPages = $employees->getTotalPages();
      $currentPage = $employees->getPage();
      $range = 2;

      // Calculando o início e o fim da faixa de páginas
      $start = max(1, $currentPage - $range);
      $end = min($totalPages, $currentPage + $range);

      // Garantindo que mostremos pelo menos 5 páginas se possível
      if ($end - $start + 1 < 5 && $totalPages >= 5) {
          if ($start === 1) {
              $end = min($totalPages, 5);
          } elseif ($end === $totalPages) {
              $start = max(1, $totalPages - 4);
          }
      }

      // Primeira página, se não estiver no início da faixa
      if ($start > 1): ?>
      <a href="<?= route('employees.index', ['page' => 1] + ($queryParams ?? [])) ?>"
        class="inline-flex items-center justify-center w-10 h-10 bg-white/60 hover:bg-white/80 text-gray-600 hover:text-gray-800 rounded-lg border border-gray-200 transition-all duration-200"
        aria-label="Ir para primeira página" title="Primeira página">1</a>
      <?php if ($start > 2): ?>
      <span class="inline-flex items-center justify-center w-10 h-10 text-gray-400 cursor-default"
        aria-hidden="true">...</span>
      <?php endif;
      endif;

      // Números das páginas
      for ($i = $start; $i <= $end; $i++): ?>
      <?php if ($i === $currentPage): ?>
      <span
        class="inline-flex items-center justify-center w-10 h-10 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg font-medium"
        aria-current="page" aria-label="Página atual, página <?= $i ?>" title="Página atual">
        <?= $i ?>
      </span>
      <?php else: ?>
      <a href="<?= route('employees.index', ['page' => $i] + ($queryParams ?? [])) ?>"
        class="inline-flex items-center justify-center w-10 h-10 bg-white/60 hover:bg-white/80 text-gray-600 hover:text-gray-800 rounded-lg border border-gray-200 transition-all duration-200"
        aria-label="Ir para página <?= $i ?>" title="Página <?= $i ?>">
        <?= $i ?>
      </a>
      <?php endif; ?>
      <?php endfor;

      // Última página, se não estiver no fim da faixa
      if ($end < $totalPages): ?>
      <?php if ($end < $totalPages - 1): ?>
      <span class="inline-flex items-center justify-center w-10 h-10 text-gray-400 cursor-default"
        aria-hidden="true">...</span>
      <?php endif; ?>
      <a href="<?= route('employees.index', ['page' => $totalPages] + ($queryParams ?? [])) ?>"
        class="inline-flex items-center justify-center w-10 h-10 bg-white/60 hover:bg-white/80 text-gray-600 hover:text-gray-800 rounded-lg border border-gray-200 transition-all duration-200"
        aria-label="Ir para última página" title="Última página (<?= $totalPages ?>)">
        <?= $totalPages ?>
      </a>
      <?php endif; ?>

